base-size = 16;
scale = (1 / 5);

* {
    border: 0em;
    padding: 0.4em;
    margin: 0.2em;
    border-radius: 0.3em;
    font-size: base-size px;
    font-family: 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', '微软雅黑', Arial, sans-serif;
}

.button {
    min-width: 2em;
    min-height: 1em;
    line-height: 1em;
    display: inline-block;
    text-align: center;
}

.h {
    font-weight: 900;
}

.warning {
    color: black;
    background-color: #a4da89;
}

.l1 {
    font-size: 2 ** (5 * scale) * base-size px;
}

.l2 {
    font-size: 2 ** (4 * scale) * base-size px;
}

.l3 {
    font-size: 2 ** (3 * scale) * base-size px;
}

.l4 {
    font-size: 2 ** (2 * scale) * base-size px;
}

.l5 {
    font-size: 2 ** (1 * scale) * base-size px;
}

.l6 {
    font-size: 2 ** (0 * scale) * base-size px;
}

input[type=checkbox] {
    display: none;
}

input[type=radio] {
    display: none;
}

input[type=checkbox]+span {
    margin: 0em;
    padding: 0em;
    display: inline-block;
    height: 1em;
    width: 1em;
    border-radius: 4px;
    background-color: #5e5e5e;
}

input[type=checkbox]:checked+span {
    background-color: #409eff;
}

input[type=radio]+span {
    margin: 0em;
    padding: 0em;
    display: inline-block;
    height: 1em;
    width: 1em;
    border-radius: 1em;
    background-color: #5e5e5e;
}

input[type=radio]:checked+span {
    background-color: #409eff;
}

